@using HtmlRenderFun.Components
@using ProcedureMakerServer.Billing
@using ProcedureMakerServer.Billing.StatementDtos
@using ProcedureShared.Dtos

<style>
	body {
		margin: 0px;
	}

	html {
		-webkit-print-color-adjust: exact;
	}

	.flex-row {
		display: flex;
		flex-direction: row;
	}

	.header-content {
		justify-content: space-around;
	}

	.bg-color {
		background-color: whitesmoke;
		width: 100vw;
		height: 100vh;
	}

	h1 {
		font-size: 13px;
		font-family: Verdana;
	}
</style>

<div class="bg-color">
	<div>
		@* header content *@
		<h1 id="bill-number" class="text1"> Bill# @InvoiceSummary.BillNumber </h1>
		<div class="flex-row header-content">
			<div>
				<h1 class="text1"> From:</h1>
				<PersonDetails Person="InvoiceSummary.Lawyer" />
			</div>
			<div>
				<h1 class="text1"> To: @InvoiceSummary.Client.FullName </h1>
				<PersonDetails Person="InvoiceSummary.Client" />
			</div>
		</div>

		@* activities *@
		<div style="margin-top: 25px">
			<h1> Activities </h1>
			<div class="flex-row" style="justify-content: space-evenly">
				<h1> # </h1>
				<h1> Description </h1>
				<h1>  Quantity </h1>
				<h1>  Unitary Cost </h1>
				<h1>  Total </h1>
			</div>

			<hr style="border-top: 3px double; margin-left: 3vw; margin-right: 3vw;" />

			<div>
				<div class="flex-row" style="justify-content: space-evenly">
					<h1> #1 </h1>
					<h1> Dickactivity </h1>
					<h1> 69 </h1>
					<h1> 87$ / qt </h1>
					<h1> Total: ta mere </h1>
				</div>
				<hr />
			</div>
			<div>
				<div class="flex-row" style="justify-content: space-evenly">
					<h1> #2 </h1>
					<h1> Dickactivity </h1>
					<h1> 69 </h1>
					<h1> 87$ / qt </h1>
					<h1> Total: ta mere </h1>
				</div>
				<hr />
			</div>
		</div>

		@* Disburses *@

		<div style="margin-top: 25px">
			<h1> Disburses </h1>

			<div class="flex-row" style="justify-content: space-evenly">
				<h1> # </h1>
				<h1> Disburse </h1>
				<h1>  Quantity </h1>
				<h1>  Unitary Cost </h1>
				<h1>  Total </h1>
			</div>
			<hr style="border-top: 3px double; margin-left: 3vw; margin-right: 3vw;" />

			<div class="flex-row" style="justify-content: space-evenly">
				<h1> #2 </h1>
				<h1> DisburseName </h1>
				<h1> 69 </h1>
				<h1> 87$ / qt </h1>
				<h1> Total: ta mere </h1>
			</div>
		</div>

		@* Payments *@
		<div>
			<div style="margin-top: 25px">
				<h1> Payments </h1>
				<div class="flex-row" style="justify-content: space-evenly">
					<h1> # </h1>
					<h1> Payment type </h1>
					<h1>  Amount </h1>
				</div>
				<hr style="border-top: 3px double; margin-left: 3vw; margin-right: 3vw;" />

				<div class="flex-row" style="justify-content: space-evenly">
					<h1> #2 </h1>
					<h1> paymentType </h1>
					<h1> Amount </h1>
				</div>
			</div>
			<h1 style="text-align-last: right; padding-right: 15vw"> Total: </h1>
		</div>

		@* Balance *@
		<div id="balance-section">

		</div>
	</div>
</div>

@code {
	[Parameter]
	public InvoiceSummary InvoiceSummary { get; set; }

